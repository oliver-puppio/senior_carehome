/* pages/report/report.wxss */
.background image {
  top: -0.1%;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -2;
}

.nav {
  /* position: fixed; */
  background: white;
  color: #353535;
  z-index: 999999;
  max-height: 94rpx;
  width: 100%;
}

.flex {
  display: flex;
  text-align: center;
  font-size: 32rpx;
}

.nav .nav-item.current {
  border-bottom: 4rpx solid;
}

.text-selected {
  color:tomato;
  font-size: 36rpx;
}

.nav .nav-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
}

.slide {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx;
  border-radius: 50rpx;
  background-color: cornsilk;
  padding: 30rpx;
}

.slideno {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx;
  border-radius: 50rpx;
  background-color: cornsilk;
  padding: 30rpx;
}

.slideimage {
  display: flex;
  align-items: center;
}

.slideimage image{
  width: 50rpx;
}

.slidetime {
  justify-content: center;
  font-size: 38rpx;
  display: flex;
  text-align: center;
  color: #353535;
}

.canvasimage {
  display: flex;
  margin-top: 20rpx;
}

.canvas {
  margin-left: 25rpx;
  width: 100%;
  height: 500rpx;
}

.view_fengexian {
  width: 96%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 0rpx 2% 20rpx 2%;
}

.view_fengexian view {
  width: 33%;
  height: 2rpx;
  background: linear-gradient(to right, #b649cc, #29ecdc);
}

.text_fengexian {
  font-size: 26rpx;
  color: gray;
  margin: 0rpx 2% 0rpx 2%;
}

.time {
  display: flex;
  justify-content: center;
  font-size: 32rpx;
}