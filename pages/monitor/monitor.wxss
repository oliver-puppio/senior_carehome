/* pages/monitor/monitor.wxss */
.background image {
  top: -0.1%;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -2;
}

.titleouter {
  margin: 20rpx;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  flex-direction:row;
}

.title {
  padding: 20rpx;
  width: 250rpx;
  border-radius: 50rpx;
  background-color: wheat;
  text-align: center;
  font-size: 40rpx;
}

.list {
  margin: 20rpx;
}

.item {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  padding: 40rpx;
  background-color: cornsilk;
  border-radius: 30rpx;
}

.namesexbutton {
  display: flex;
  justify-content: space-between;
}

.namesex {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.name {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.seximage image {
  width: 60rpx;
}

.buttonview {
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  flex-direction: row;
}

.place {
  display: flex;
  padding-bottom: 10rpx;
}

.place image {
  width: 40rpx;
}

.placedata {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: dimgray;
}

.timestate {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  display: flex;
  justify-content: space-between;
}

.hbs {
  display: flex;
}

.hbs image {
  width: 48rpx;
}

.innerdata {
  margin-left: 20rpx;
  font-size: 36rpx;
}

.error {
  display: flex;
  margin-top: 15rpx;
}

.errorimage image {
  width: 48rpx;
}

.errorreason {
  margin-left: 20rpx;
  font-size: 36rpx;
}

.view_fengexian {
  width: 96%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 0rpx 2% 20rpx 2%;
}

.view_fengexian view {
  width: 33%;
  height: 2rpx;
  background: linear-gradient(to right, #b649cc, #29ecdc);
}

.text_fengexian {
  font-size: 26rpx;
  color: gray;
  margin: 0rpx 2% 0rpx 2%;
}

.itemout {
  position: relative;
}

.itemout .buttonout {
  position: absolute;
  left: 503rpx;
  top: 58rpx;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  flex-direction: row;
}